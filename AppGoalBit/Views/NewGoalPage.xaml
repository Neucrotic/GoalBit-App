<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGoalBit.Views.NewGoalPage"
             xmlns:viewmodel="clr-namespace:AppGoalBit.ViewModel"
             x:DataType="viewmodel:NewGoalViewModel"
             Shell.BackgroundColor="{StaticResource Accent}">
    <Shell.TitleView>
        <Label Text="New Goal"
               TextColor="{AppThemeBinding Light={StaticResource Secondary}, Dark={StaticResource SecondaryDark}}"
               FontSize="24"
               VerticalOptions="Center"
               HorizontalOptions="Center"
               Margin="0, 0, 70, 0"/>
    </Shell.TitleView>

    <VerticalStackLayout>
        <Entry x:Name="goal_name"
               Placeholder="What is your new goal?"
               ClearButtonVisibility="WhileEditing"/>
        <Entry x:Name="goal_description"
               Placeholder="Decribe your new goal."
               ClearButtonVisibility="WhileEditing"/>
        <HorizontalStackLayout HorizontalOptions="Center">
            <Button Text="Create"
                    HorizontalOptions="Center"
                    Command="{Binding NewGoalDoneCommand}"
                    />
            <Button Text="Cancel"
                    HorizontalOptions="Center"
                    Command="{Binding CancelGoalCommand}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>